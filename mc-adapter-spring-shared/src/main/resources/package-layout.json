{
  "layoutName": "spring-package-layout",
  "layout": [
    {
      "package": "{{basePackage}}.infra.config",
      "archetypes": [
        "ApplicationConfiguration",
        "DateTimeFormatConfiguration",
        "ProblemConfiguration",
        "LocalDateConverter",
        "WebMvcConfiguration",
        "ContainerConfiguration",
        "SecurityResponseHeadersFilter",
        "MongoContainerConfiguration"
      ]
    },
    {
      "package": "{{basePackage}}.infra.advice",
      "archetypes": [
        "GlobalExceptionHandler"
      ]
    },
    {
      "package": "{{basePackage}}.exceptions",
      "archetypes": [
        "Exception",
        "BadRequestException",
        "ResourceNotFoundException",
        "UnprocessableEntityException"
      ]
    },
    {
      "package": "{{basePackage}}.home.api",
      "archetypes": [
        "RootController",
        "RootControllerExceptionHandler",
        "RootService",
        "DefaultController",
        "DefaultService"
      ]
    },
    {
      "package": "{{basePackage}}.infra.profiles",
      "archetypes": [
        "SpringProfiles"
      ]
    },
    {
      "package": "{{basePackage}}.infra.utils",
      "archetypes": [
        "SecureRandomSeries"
      ]
    },
    {
      "package": "{{basePackage}}.traits",
      "archetypes": [
        "ResourceIdTrait"
      ]
    },
    {
      "package": "{{basePackage}}.infra.validation",
      "archetypes": [
        "AlphabeticAnnotation",
        "AlphabeticValidator",
        "OnCreateAnnotation",
        "OnUpdateAnnotation",
        "ResourceIdAnnotation",
        "ResourceIdValidator",
        "SearchTextAnnotation",
        "SearchTextValidator"
      ]
    },
    {
      "package": "{{basePackage}}.infra.filter",
      "archetypes": [ "SecurityResponseHeadersFilter" ]
    },
    {
      "package": "{{basePackage}}.{{endpoint}}.persistence.converters",
      "archetypes": [
        "EntityToPojoConverter",
        "PojoToEntityConverter",
        "PojoToDocumentConverter",
        "DocumentToPojoConverter"
      ]
    },
    {
      "package": "{{basePackage}}.infra.common",
      "archetypes": [
        "AbstractIntegrationTest"
      ]
    },
    {
      "package": "{{basePackage}}",
      "archetypes": [
        "Application"
      ]
    },
    {
      "package": "{{basePackage}}.{{endpoint}}.api",
      "archetypes": [
        "Controller",
        "ControllerExceptionHandler",
        "Routes",
        "ServiceApi",
        "ServiceImpl"
      ]
    },
    {
      "package": "{{basePackage}}.{{endpoint}}.helper",
      "archetypes": [
        "ConversionService"
      ]
    },
    {
      "package": "{{basePackage}}.persistence",
      "archetypes": [
        "CustomRepository",
        "CustomSQLRepository",
        "DataStoreApi",
        "DataStoreImpl",
        "DatabaseTablePopulator",
        "Entity"
      ]
    },
    {
      "package": "{{basePackage}}.{{endpoint}}.persistence",
      "archetypes": [
        "Document",
        "DocumentKindStore",
        "DocumentKindStoreProvider",
        "Entity",
        "ObjectDataStore",
        "ObjectDataStoreProvider",
        "Repository",
        "MongoDataStore",
        "MongoDataStoreProvider",
        "WebMvcEjbTestFixtures",
        "DocumentTestFixtures"
      ]
    },

    {
      "package": "{{basePackage}}.infra.persistence",
      "archetypes": [
        "GenericDataStore",
        "ObjectDataStore",
        "PersistenceAdapter",
        "RegisterDatabaseProperties",
        "MongoDbContainerTests",
        "PostgresDbContainerTests"
      ]
    },
    {
      "package": "{{basePackage}}.infra.api.providers",
      "archetypes": [ "ResourceIdSupplier" ]
    },
    {
      "package": "{{basePackage}}.{{endpoint}}.domain",
      "archetypes": [ "Pojo", "EntityResource", "WebMvcModelTestFixtures", "PojoTestFixtures" ]
    },
    {
      "package": "{{basePackage}}.{{endpoint}}.persistence.predicate",
      "archetypes": [
        "EntityWithText"
      ]
    },
    {
      "package": "{{basePackage}}.misc",
      "archetypes": [ "Text", "Undefined" ]
    }
  ]
}
